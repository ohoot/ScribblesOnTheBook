<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book_detail.DetailBookInfoActivity"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="#ede3cb">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="285dp"
                android:layout_height="344dp"
                android:id="@+id/image_add_book_cover"
                android:layout_gravity="center_horizontal" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/radioGroup_add_book"
                android:layout_marginBottom="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_add_book_done"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/bookshelf_done_selector" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_add_book_reading"
                    android:checked="true"
                    android:background="@drawable/bookshelf_reading_selector"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_add_book_will"
                    android:checked="false"
                    android:background="@drawable/bookshelf_will_selector"
                    android:button="@null" />
            </RadioGroup>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView_add_book_scribbles"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:choiceMode="multipleChoice" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/btn_add_book"
        android:id="@+id/btn_add_book"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#110e34"
        android:textColor="#ffc600" />

</RelativeLayout>
