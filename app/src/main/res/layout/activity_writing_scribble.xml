<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:paddingLeft="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="p."
                android:textSize="13dp" />

            <EditText
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_scribble_page"
                android:hint="@string/scribble_page_hint"
                android:textSize="13dp"
                android:background="@drawable/bg_bookcase_datail_popup" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_scribble_content"
            android:gravity="top|left"
            android:background="@drawable/bg_bookcase_datail_popup"
            android:hint="@string/scribble_content_hint"
            android:layout_marginBottom="7dp" />

        <ImageView
            android:layout_width="162dp"
            android:layout_height="90dp"
            android:id="@+id/image_scribble_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_scribble_page"
            android:src="@drawable/btn_doodle_page"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_scribble_camera"
            android:src="@drawable/btn_doodle_camera"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_scribble_gallay"
            android:src="@drawable/btn_doodle_gallery" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_scribble_bookmark_enjoy"
                android:src="@drawable/btn_bookmark_enjoy_nor"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_scribble_bookmark_surprise"
                android:src="@drawable/btn_bookmark_surprise_nor"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_scribble_bookmark_emb"
                android:src="@drawable/btn_bookmark_emb_nor"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_scribble_bookmark_sad"
                android:src="@drawable/btn_bookmark_sad_nor"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_scribble_bookmark_awk"
                android:src="@drawable/btn_bookmark_awaken_nor"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_scribble_bookmark_lovely"
                android:src="@drawable/btn_bookmark_lovely_nor"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:id="@+id/btn_upload_tmp" />

</LinearLayout>