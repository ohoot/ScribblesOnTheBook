<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ede3cb"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#110e34"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_toolbar_filter"
            android:id="@+id/text_toolbar_profile"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_toolbar" />
    </LinearLayout>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/gridview_filter_height"
        android:id="@+id/gridView"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numColumns="2"
        android:choiceMode="multipleChoice" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="#110e34"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_filter_cancel"
            android:id="@+id/btn_filter_cancel"
            android:layout_weight="1"
            android:background="#110e34"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_filter_ok"
            android:id="@+id/btn_filter_done"
            android:layout_weight="1"
            android:background="#110e34"
            android:textColor="#ffc600" />
    </LinearLayout>

</LinearLayout>
