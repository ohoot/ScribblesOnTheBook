<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joo.scribblesonthebook.main.RecommListFragment"
    android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:layout_width="wrap_content"
            android:layout_height="@dimen/searching_pager_height"
            android:id="@+id/searchingRecomm_pager"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/searching_pager_top_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_recomm"
            android:layout_marginTop="@dimen/text_recomm_top_margin"
            android:visibility="gone"/>

</LinearLayout>
